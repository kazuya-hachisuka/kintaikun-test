<div class="container py-4 mb-5">
		<div class="row justify-content-center">
			<div class="card shadow-lg border-darks w-50 ">
				<div class="card-header text-center h4" style="background-color:#fb8303;">
					<b class="">店舗編集</b></div>
				<div class="card-body">

					<%= form_for store, url:store_path  do |f| %>
						<div class="form-group">
							<p class="badge badge-light">店舗名</p>
						<%= f.text_field :store_name, class:"form-control" %>

							<%= f.submit '更新', class:"btn btn-outline-info mt-3 btn-sm" %>
						<% if store.staffs.present? %>

						<% else %>
							<%= link_to '削除', store_path, method: :delete, data: {confirm: '本当に削除しますか??'}, class:"btn btn-outline-danger mt-3 btn-sm" %>

						<% end %>

					<% end %>

						</div>

				</div>
			</div>
		</div>
	</div>