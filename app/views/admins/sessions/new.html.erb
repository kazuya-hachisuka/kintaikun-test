<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="card">
      <div class="card-header">管理者ログイン</div>
        <div class="card-body">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <label for="input">メール</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",plachholder:"メール" %>

              <label for="input">パスワード</label>
              <%= f.password_field :password, autocomplete: "off", class:"form-control", plachholder:"パスワード"  %>

            <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
            <% end -%>

              <%= f.submit "Log in", class:"btn btn-info mt-2" %>
            </div>
          <% end %>

          <%= render "admins/shared/links" %>
        </div>
    </div>
  </div>
</div>
