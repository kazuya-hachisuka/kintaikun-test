<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="card shadow-lg" style="width: 30rem;">
      <div class="card-header text-center h1">管理者追加</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-groupe">
            <label for="Input">名前</label>
              <div class="form-inline">
              <%= f.text_field :family_name, autofocus: true, autocomplete: "姓", class:"form-control mr-2", placeholder: "姓" %>
              <%= f.text_field :given_name, autofocus: true, autocomplete: "名", class:"form-control", placeholder: "名" %>
              </div>

              <label for="input">フリガナ</label>
                <div class="form-inline">
                  <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "セイ", class:"form-control mr-2", placeholder: "セイ" %>
                  <%= f.text_field :given_name_kana, autofocus: true, autocomplete: "メイ", class:"form-control", placeholder: "メイ" %>
                </div>

              <label for="input">メール</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>

              <label for="input">パスワード</label>
              <% if @minimum_password_length %>
              <em>(< %= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class:"form-control" %>


              <label for="input">パスワード確認</label>
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>

              <%= f.submit "作成", class:"btn btn-info btn-sm mt-2" %>
          </div>
        <% end %>

      <%#= render "admins/shared/links" %>
    </div>
  </div>
</div>
